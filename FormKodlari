        private void DtpCikis_ValueChanged(object sender, EventArgs e)
        {
            int ucret;
            DateTime kucukTarih = Convert.ToDateTime(DtpGiris.Text);
            DateTime buyukTarih = Convert.ToDateTime(DtpCikis.Text);
            
            TimeSpan sonuc;
            sonuc= buyukTarih - kucukTarih;
            label11.Text = sonuc.TotalDays.ToString();

            ucret = Convert.ToInt32(label11.Text)*200;
            txtUcret.Text = ucret.ToString();
        }

        private void btnKaydet_Click(object sender, EventArgs e)
        {
            if (txtOdaNo.Text != "")
            {
                baglanti.Open();
                SqlCommand komut = new SqlCommand("insert into MusteriEkle2 (Adi,Soyadi,Cinsiyet,Telefon,Mail,[TC],OdaNo,Ucret,GirisTarihi,CikisTarihi) values ('" + txtAdi.Text + "','" + txtSoyadi.Text + "','" + comboBox1.Text + "','" + MskTxtTelefonNo.Text + "','" + txtMail.Text + "','" + txtTC.Text + "','" + txtOdaNo.Text + "','" + txtUcret.Text + "','" + DtpGiris.Value.ToString("yyyy-MM-dd") + "','" + DtpCikis.Value.ToString("yyyy-MM-dd") + "')", baglanti);
                komut.ExecuteNonQuery();
                baglanti.Close();
                MessageBox.Show("Müşteri kaydı başarıyla yapıldı.");
            }
            else
            {
                MessageBox.Show("Lütfen bir oda seçin.");
            }
        }
    }
