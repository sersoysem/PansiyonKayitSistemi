        private void FrmOdalar_Load(object sender, EventArgs e)
        {
            CheckRoomAvailability("101", btnOda101);
            CheckRoomAvailability("102", btnOda102);
            CheckRoomAvailability("103", btnOda103);
            CheckRoomAvailability("104", btnOda104);
            CheckRoomAvailability("105", btnOda105);
            CheckRoomAvailability("106", btnOda106);
            CheckRoomAvailability("107", btnOda107);
            CheckRoomAvailability("108", btnOda108);
            CheckRoomAvailability("109", btnOda109);
        }

        private void CheckRoomAvailability(string roomNumber, Button button)
        {
            baglanti.Open();
            SqlCommand komut = new SqlCommand($"SELECT * FROM MusteriEkle2 WHERE OdaNo = {roomNumber}", baglanti);
            SqlDataReader reader = komut.ExecuteReader();

            if (reader.Read())
            {
                button.Text = $"{reader["Adi"]} {reader["Soyadi"]}";
                if (button.Text != roomNumber)
                {
                    button.BackColor = Color.Red;
                    
                }
            }

            baglanti.Close();
        }
