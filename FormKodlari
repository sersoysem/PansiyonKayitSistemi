namespace Firat_Pansiyon
{
    public partial class FrmFaturalar : Form
    {
        public FrmFaturalar()
        {
            InitializeComponent();
        }
        SqlConnection baglanti = new SqlConnection(@"Data Source= .;Initial Catalog=Pansiyon;Integrated Security=True");


        private void timer1_Tick(object sender, EventArgs e)
        {
            lblTarih.Text = DateTime.Now.ToLongDateString();
        }

        private void FrmFaturalar_Load(object sender, EventArgs e)
        {
            timer1.Start();
        }

        private void btnAra_Click_1(object sender, EventArgs e)
        {
            listView1.Items.Clear();
            baglanti.Open();
            SqlCommand komut = new SqlCommand("select * from MusteriEkle2 where Adi like '%" + textBox1.Text + "%'", baglanti);
            SqlDataReader oku = komut.ExecuteReader();
            while (oku.Read())
            {
                ListViewItem ekle = new ListViewItem();
                ekle.Text = oku["Musteriid"].ToString();
                ekle.SubItems.Add(oku["Adi"].ToString());
                ekle.SubItems.Add(oku["Soyadi"].ToString());
                ekle.SubItems.Add(oku["Cinsiyet"].ToString());
                ekle.SubItems.Add(oku["Telefon"].ToString());
                ekle.SubItems.Add(oku["Mail"].ToString());
                ekle.SubItems.Add(oku["TC"].ToString());
                ekle.SubItems.Add(oku["OdaNo"].ToString());
                ekle.SubItems.Add(oku["Ucret"].ToString());
                ekle.SubItems.Add(oku["GirisTarihi"].ToString());
                ekle.SubItems.Add(oku["CikisTarihi"].ToString());

                listView1.Items.Add(ekle);
            }
            baglanti.Close();
        }
        int id = 0;

        private void listView1_DoubleClick_1(object sender, EventArgs e)
        {
            id = int.Parse(listView1.SelectedItems[0].SubItems[0].Text);
            lblMusteriAdi.Text = listView1.SelectedItems[0].SubItems[1].Text;
            lblMusteriSoyadi.Text = listView1.SelectedItems[0].SubItems[2].Text;
            lblTC.Text = listView1.SelectedItems[0].SubItems[6].Text;
            lblOdaNumarasi.Text = listView1.SelectedItems[0].SubItems[7].Text;
            lblUcret.Text = listView1.SelectedItems[0].SubItems[8].Text;
            lblGirisTarihi.Text = listView1.SelectedItems[0].SubItems[9].Text;
            lblCikisTarihi.Text = listView1.SelectedItems[0].SubItems[10].Text;

        }

        private void button1_Click(object sender, EventArgs e)
        {
            CaptureAndSaveScreenshot();
        }
        private void CaptureAndSaveScreenshot()
        {
            // groupBox1 kontrolünün sınırlarını al
            Rectangle bounds = groupBox1.Bounds;

            // Ekran görüntüsünü al
            using (Bitmap bitmap = new Bitmap(bounds.Width, bounds.Height))
            {
                using (Graphics g = Graphics.FromImage(bitmap))
                {
                    g.CopyFromScreen(new Point(160, 400), Point.Empty, bounds.Size);
                }

                // Klasör oluştur
                string folderPath = Path.Combine(Environment.GetFolderPath(Environment.SpecialFolder.Desktop), "Faturalar");
                if (!Directory.Exists(folderPath))
                {
                    Directory.CreateDirectory(folderPath);
                }

                // Dosyayı kaydet
                string fileName = Path.Combine(folderPath, $"screenshot_{DateTime.Now:yyyyMMdd_HHmmss}.png");
                bitmap.Save(fileName, System.Drawing.Imaging.ImageFormat.Png);

                MessageBox.Show($"Ekran görüntüsü başarıyla kaydedildi:\n{fileName}", "Bilgi", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
           
        }
    }
}





	//Musteri Mesajları Formu

using System;
using System.Data.SqlClient;
using System.Windows.Forms;

namespace Firat_Pansiyon
{
    public partial class Mesajlar : Form
    {
        SqlConnection baglanti = new SqlConnection(@"Data Source= .;Initial Catalog=Pansiyon;Integrated Security=True");

        public Mesajlar()
        {
            InitializeComponent();
        }

        private void VerileriGoster()
        {
            listView1.Items.Clear();
            baglanti.Open();
            SqlCommand komut = new SqlCommand("SELECT * FROM Mesajlar2", baglanti);
            SqlDataReader oku = komut.ExecuteReader();

            while (oku.Read())
            {
                ListViewItem ekle = new ListViewItem();
                ekle.Text = oku["Mesajid"].ToString();
                ekle.SubItems.Add(oku["AdSoyad"].ToString());
                ekle.SubItems.Add(oku["Mesaj"].ToString());
                listView1.Items.Add(ekle);
            }

            baglanti.Close();
        }

        private void Mesajlar_Load(object sender, EventArgs e)
        {
            VerileriGoster();
        }

        private void btnKaydet_Click_1(object sender, EventArgs e)
        {
            baglanti.Open();
            SqlCommand komut = new SqlCommand("INSERT INTO Mesajlar2(AdSoyad, Mesaj) VALUES('" + txtAd.Text + "','" + rtxtMesaj.Text + "')", baglanti);
            komut.ExecuteNonQuery();
            baglanti.Close();

            // Clear the text fields after saving
            txtAd.Text = "";
            rtxtMesaj.Text = "";

            // Refresh the ListView
            VerileriGoster();
        }
        int id = 0;
        private void listView1_DoubleClick(object sender, EventArgs e)
        {
            if (listView1.SelectedItems.Count > 0)
            {
                id = int.Parse(listView1.SelectedItems[0].Text);
                txtAd.Text = listView1.SelectedItems[0].SubItems[1].Text;
                rtxtMesaj.Text = listView1.SelectedItems[0].SubItems[2].Text;
            }
        }

    }
