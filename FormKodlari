            {
                if (!oku1.IsDBNull(oku1.GetOrdinal("Adi")))
                {
                    btnOda101.Text = oku1["Adi"].ToString() + " " + oku1["Soyadi"].ToString();
                    btnOda101.BackColor = Color.Red; // Oda doluysa kırmızı renk
                    btnOda101.Enabled = false;
                }
