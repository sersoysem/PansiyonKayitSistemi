	//Gunun Menusu Formu

using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Reflection.Emit;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Firat_Pansiyon
{
    public partial class FrmGununMenusu : Form
    {
        public FrmGununMenusu()
        {
            InitializeComponent();
        }
        SqlConnection baglanti = new SqlConnection(@"Data Source= .;Initial Catalog=Pansiyon;Integrated Security=True");

        private void timer1_Tick(object sender, EventArgs e)
        {
            lblTarih.Text = DateTime.Now.ToLongDateString();
            lblSaat.Text = DateTime.Now.ToLongTimeString();
            LoadDailyMenu();
        }

        private int GunId = 1;

        private void FrmGununMenusu_Load(object sender, EventArgs e)
        {
            // TODO: Bu kod satırı 'pansiyonDataSet1.GununMenusu2' tablosuna veri yükler. Bunu gerektiği şekilde taşıyabilir, veya kaldırabilirsiniz.
            this.gununMenusu2TableAdapter.Fill(this.pansiyonDataSet1.GununMenusu2);
            timer1.Start();

            LoadDailyMenu();
        }

       
        private void LoadDailyMenu()
        {
            // Get the current day of the week (1: Sunday, 2: Monday, ..., 7: Saturday)
            int currentDay = (int)DateTime.Now.DayOfWeek + 1;

            using (SqlCommand komut1 = new SqlCommand("SELECT * FROM GununMenusu2 WHERE Gun_ID = @Gun_ID", baglanti))
            {
                komut1.Parameters.AddWithValue("@Gun_ID", currentDay);

                baglanti.Open();

                using (SqlDataReader oku1 = komut1.ExecuteReader())
                {
                    if (oku1.Read())
                    {
                        lblCorba.Text = oku1["Corba"].ToString();
                        lblYemek.Text = oku1["AnaYemek"].ToString();
                        lblTatli.Text = oku1["Tatli"].ToString();
                    }
                    else
                    {
                        lblCorba.Text = "Menü bulunamadı.";
                        lblYemek.Text = "";
                        lblTatli.Text = "";
                    }
                }

                baglanti.Close();
            }
        }
    }
}




	//Hava Durumu Formu

using System;
using System.Data.SqlClient;
using System.Windows.Forms;

namespace Firat_Pansiyon
{
    public partial class FrmHavaDurumu : Form
    {
        SqlConnection baglanti = new SqlConnection(@"Data Source= .;Initial Catalog=Pansiyon;Integrated Security=True");

        private int GunId;

        public FrmHavaDurumu()
        {
            InitializeComponent();
        }

        private void FrmHavaDurumu_Load(object sender, EventArgs e)
        {
            timer1.Start();
            UpdateGunId();
            LoadWeatherData();
        }

        private void LoadWeatherData()
        {
            using (SqlCommand komut1 = new SqlCommand("SELECT * FROM HavaDurumu2 WHERE GunID = @GunID", baglanti))
            {
                komut1.Parameters.AddWithValue("@GunID", GunId);

                baglanti.Open();

                SqlDataReader oku1 = komut1.ExecuteReader();

                if (oku1.Read())
                {
                    lblHava.Text = oku1["HavaDurumu"].ToString();
                    lblDerece1.Text = oku1["GunduzSicaklik"].ToString();
                    lblDerece2.Text = oku1["GeceSicaklik"].ToString();
                }

                baglanti.Close();
            }
        }

        private void UpdateGunId()
        {
            // Set GunId based on the current day of the week
            GunId = (int)DateTime.Now.DayOfWeek + 1;

            // If GunId is greater than 7, reset it to 1 (to repeat for each day)
            if (GunId > 7)
            {
                GunId = 1;
            }
        }

        private void timer1_Tick_1(object sender, EventArgs e)
        {
            lblTarih.Text = DateTime.Now.ToLongDateString();
            lblSaat.Text = DateTime.Now.ToLongTimeString();

            // Update GunId based on the current day of the week
            UpdateGunId();

            // Load weather data based on the updated GunId
            LoadWeatherData();
        }
    }
}




