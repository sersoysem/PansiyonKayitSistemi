

	//Hos Geldiniz Formu

using System;
using System.Windows.Forms;

namespace Firat_Pansiyon
{
    public partial class HosGeldiniz : Form
    {
        public HosGeldiniz()
        {
            InitializeComponent();
        }

        int startPoint = 0;

        private void timer1_Tick(object sender, EventArgs e)
        {
            startPoint += 2;
            progressBar1.Value = startPoint;
            if (progressBar1.Value == 100)
            {
                progressBar1.Value = 0;
                timer1.Stop();

                this.Hide(); // Formu kapat

                FrmAdminGiris fr = new FrmAdminGiris();
                fr.ShowDialog();
            }
        }

        private void HosGeldiniz_Load(object sender, EventArgs e)
        {
            timer1.Start();
        }
    }
}



	//Admin Giriş Formu

using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Data.Sql;
using System.Data.SqlClient;
using static System.Windows.Forms.VisualStyles.VisualStyleElement;

namespace Firat_Pansiyon
{
    public partial class FrmAdminGiris : Form
    {
        SqlConnection baglanti = new SqlConnection(@"Data Source= .;Initial Catalog=Pansiyon;Integrated Security=True");
        private int girisDenemesi = 5;
        public FrmAdminGiris()
        {
            InitializeComponent();
        }
        private void btngiris_Click(object sender, EventArgs e)
        {
            try
            {
                baglanti.Open();
                string sql = "select * from parola where Ad= @adi AND Sifre= @sifresi ";
                SqlParameter prm1 = new SqlParameter("adi", txtkuladi.Text.Trim());
                SqlParameter prm2 = new SqlParameter("sifresi", txtprl.Text.Trim());
                SqlCommand komut = new SqlCommand(sql, baglanti);
                komut.Parameters.Add(prm1);
                komut.Parameters.Add(prm2);
                DataTable dt = new DataTable();
                SqlDataAdapter da = new SqlDataAdapter(komut);
                da.Fill(dt);

                if (dt.Rows.Count > 0)
                {
                    FrmAnaform fr = new FrmAnaform();
                    fr.Show();
                }
                else
                {
                    girisDenemesi--; 
                    MessageBox.Show("Kullanıcı adı veya şifreniz hatalı. Kalan Deneme Hakkı: " + girisDenemesi);

                    if (girisDenemesi == 0)
                    {
                        btngiris.Enabled = false; 
                    }
                }
            }
            catch (Exception)
            {


            }
            finally
            {
                baglanti.Close();
            }
        }
       
        private void linkLabel1_LinkClicked(object sender, LinkLabelLinkClickedEventArgs e)
        {
            FrmSifreGuncelle fr1 = new FrmSifreGuncelle();
            fr1.Show();

        }
    }
}

	



	//Sifre Güncelle Formu

using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Data.SqlClient;
using static System.Windows.Forms.VisualStyles.VisualStyleElement;

namespace Firat_Pansiyon
{
    public partial class FrmSifreGuncelle : Form
    {
        public FrmSifreGuncelle()
        {
            InitializeComponent();
        }

        SqlConnection baglanti = new SqlConnection(@"Data Source= .;Initial Catalog=Pansiyon;Integrated Security=True");

        int id = 0;

        private void btnGuncelle_Click(object sender, EventArgs e)
        {
            baglanti.Open();
            SqlCommand komut= new SqlCommand("update parola set Sifre="+ txtSifre.Text.ToString()+"where id= " + txtKulAdi.Text.ToString(),baglanti);
            komut.ExecuteNonQuery();
            baglanti.Close();
            MessageBox.Show("Şifreniz Başarıyla Değiştirildi.");
        }
    }
}






