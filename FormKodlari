        private void btnOda101_Click(object sender, EventArgs e)
        {
            txtOdaNo.Text = "101";

            if (txtAdi.Text.Trim() == "" || txtSoyadi.Text.Trim() == "" || comboBox1.SelectedIndex == -1 || MskTxtTelefonNo.Text.Trim() == "" || txtMail.Text.Trim() == "" || txtTC.Text.Trim() == "")
            {
                MessageBox.Show("Lütfen müşteri bilgilerini eksiksiz doldurun.");
                return;
            }
        }

